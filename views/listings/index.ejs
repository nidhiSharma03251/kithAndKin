    <a style="text-decoration: none;" href="/listings/<%=list._id%>">
      <div class="card col" style="border:none !important; margin-bottom:2rem !important;">
      <img src="<%=list.image.url%>" class="card-img-top" style="height: 20rem;" alt="list image" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=list.title%> <br></b>
          â‚¹<%=list.price.toLocaleString("en-IN")%>/night
        </p>
      </div>
    </div>
    </a>
    <%} %>
  </div>
</body>
